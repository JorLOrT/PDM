            app:strokeColor="@color/main_color"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
